{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "yarn run build",
		"beforeDevCommand": "yarn run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../public"
	},
	"package": {
		"productName": "whiskers-launcher",
		"version": "2.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"window": {
				"all": true
			},
			"shell": {
				"all": true
			},
			"fs": {
				"all": true
			},
			"path": {
				"all": true
			},
			"dialog": {
				"open": true,
				"save": true
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": ["**", "$HOME/.local/**"]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.tauri.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": true,
				"maximizable": true,
				"title": "Whiskers Launcher",
				"decorations": false,
				"transparent": true
			}
		]
	}
}
